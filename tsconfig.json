{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["src", "src/types.d.ts"],
  "exclude": ["node_modules", "build"]
}